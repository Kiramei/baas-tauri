{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "baas-tauri",
  "version": "0.1.0",
  "identifier": "com.kiramei.baas-tauri",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8191",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "beforeBundleCommand": "pnpm run build:after"
  },
  "app": {
    "windows": [
      {
        "title": "Blue Archive Auto Script",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 360,
        "minHeight": 640,
        "devtools": true,
        "visible": false,
        "theme": null
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
